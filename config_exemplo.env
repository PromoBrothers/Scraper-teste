# Configuração do Sistema Unificado de Web Scraping para Afiliados

# ===========================================
# CONFIGURAÇÕES BÁSICAS
# ===========================================

# Modo de debug (true/false)
FLASK_DEBUG=false

# Porta do servidor
PORT=5000

# ===========================================
# CONFIGURAÇÕES DE PROXY
# ===========================================

# Proxy principal
PROXY_HOST=proxy.exemplo.com
PROXY_PORT=8080
PROXY_USERNAME=seu_usuario
PROXY_PASSWORD=sua_senha
USE_PROXY=true

# Proxy secundário (opcional)
PROXY2_HOST=proxy2.exemplo.com
PROXY2_PORT=8080
PROXY2_USERNAME=usuario2
PROXY2_PASSWORD=senha2

# ===========================================
# USER AGENT
# ===========================================

# User Agent para requisições (será escolhido aleatoriamente se não especificado)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ===========================================
# IDs DE AFILIADO
# ===========================================

# Amazon Associates
AMAZON_ASSOCIATES_TAG=seu-tag-20

# Mercado Livre
MERCADOLIVRE_AFFILIATE_ID=seu_id_mercadolivre

# Magazine Luiza
MAGAZINE_AFFILIATE_ID=seu_id_magazine

# Shopee
SHOPEE_AFFILIATE_ID=seu_id_shopee

# Casas Bahia
CASASBAHIA_AFFILIATE_ID=seu_id_casasbahia

# Submarino
SUBMARINO_AFFILIATE_ID=seu_id_submarino

# ===========================================
# WEBHOOK
# ===========================================

# URL do webhook para envio de dados
WEBHOOK_URL=https://seu-webhook.com/endpoint

# ===========================================
# AGENTE DE IA N8N
# ===========================================

# URL do agente de IA do n8n para formatação automática de mensagens
N8N_AI_AGENT_URL=https://seu-n8n.com/webhook/formatar-mensagem

# ===========================================
# SUPABASE
# ===========================================

# URL do Supabase
SUPABASE_URL=https://seu-projeto.supabase.co

# Chave do Supabase
SUPABASE_KEY=sua_chave_supabase

# Nome do bucket para imagens
SUPABASE_BUCKET_NAME=imagens-produtos
